template<typename T>
TMatrix<T> operator-(TMatrix<T> const& x, TMatrix<T> const& y) 
{
  MLPtr<T> p( subtract<T>(x.ml_, y.ml_));
  return TMatrix<T>(p);
}

// ||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
