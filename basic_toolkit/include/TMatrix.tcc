template<typename T>
TMatrix<T> operator-(TMatrix<T> const& x, T const& y) 
{
  MLPtr<T> p(add<T>(x.ml_, -y));
  return TMatrix<T>(p);

}

// ||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
