template<typename T>
TMatrix<T> operator+( T const& y, TMatrix<T> const& x )  // add returns a new matrix
{
  MLPtr<T> p = add<T>(x.ml_, y);
  return TMatrix<T>( p);

}

// ||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
