template<typename T>
TMatrix<T> operator-(TMatrix<T> const& x) 
{

  MLPtr<T> p( Negate<T>(x.ml_) ); // Note: Negate does a deepcopy   
  return TMatrix<T>(p);

}

// ||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
