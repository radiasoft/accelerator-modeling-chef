AC_INIT(src/Distribution.cc)
AC_CONFIG_AUX_DIR(config)
AM_CONFIG_HEADER([config.h])
AM_INIT_AUTOMAKE(basic_toolkit, 1.0, no-define)

#CXXFLAGS="${CXXFLAGS} -fvisibility=hidden"

AC_ARG_WITH(cxx,AC_HELP_STRING([--with-cxx=CXX],[CXX = your compiler; g++=GNU Compiler (default), CC=Sun Compiler, pgCC=PGI compiler]),
if test "x${withval}" != "xno"; then
CXX=${withval}
fi)

AC_ARG_WITH(cc,AC_HELP_STRING([--with-cc=CC],[CC = your compiler; gcc=GNU Compiler (default), cc=Sun Compiler]),
if test "x${withval}" != "xno"; then
CC=${withval}
fi)

## do explicit template instantiation by default
AC_ARG_ENABLE(implicit-templates, AC_HELP_STRING([--enable-implicit-templates],[ Enable implicit template instantiation for portability]), 
	      CXXFLAGS="${CXXFLAGS}";implicit-templates=true,
              CXXFLAGS="-DBASICTOOLKIT_EXPLICIT_TEMPLATES  -fno-implicit-templates ${CXXFLAGS}" )
AM_CONDITIONAL(IMPLICIT_TEMPLATES, test x$implicit_templates = xtrue)

if test -n "${CXXFLAGS}"; then 
set_CXXFLAGS=${CXXFLAGS}
fi
if test -n "${CFLAGS}"; then
set_CFLAGS=${CFLAGS}
fi 


# Checks for programs.
AC_PROG_CXX(g++ CC)
AC_PROG_CC(gcc cc)
AC_PROG_LIBTOOL

AC_ARG_ENABLE(debug,AC_HELP_STRING([--enable-debug],[Debugging. Turns off Optimization]),
if test "x$set_CXXFLAGS" != "x" && test "x$set_CFLAGS" != "x"; then
	CXXFLAGS=$set_CXXFLAGS
	CFLAGS=$set_CFLAGS
	AC_SUBST(CFLAGS)
	AC_SUBST(CXXFLAGS)
elif test "x${GXX}" = "xyes" || test "x${GCC}" = "xyes"; then
   CFLAGS="${CFLAGS} -g"
   CXXFLAGS="${CXXFLAGS} -g -O2 -pipe -Wno-deprecated"
   AC_SUBST(CFLAGS)
   AC_SUBST(CXXFLAGS)
elif test "x${CXX}" = "xCC"; then
     CXXFLAGS="-instances=global"
     LDFLAGS="-Xlinker -zmuldefs"
     AC_SUBST(CXXFLAGS)
     AC_SUBST(LDFLAGS)
elif test "x${CXX}" = "xpgCC"; then
     CXXFLAGS="-g"
     AM_CPPFLAGS="--prelink_objects"
     AC_SUBST(CXXFLAGS)
     AC_SUBST(AM_CPPFLAGS)
fi,
if test "x$set_CXXFLAGS" != "x" && test "x$set_CFLAGS" != "x"; then
	CXXFLAGS=$set_CXXFLAGS
	CFLAGS=$set_CFLAGS
##	AC_SUBST(CFLAGS)
##	AC_SUBST(CXXFLAGS)
elif test "x${GXX}" = "xyes" || test "x${GCC}" = "xyes"; then
   CFLAGS="${CFLAGS} -g -O2"
   CXXFLAGS="${CXXFLAGS} -g -O2 -pipe -Wno-deprecated"
   AC_SUBST(CFLAGS)
   AC_SUBST(CXXFLAGS)
elif test "x${CXX}" = "xCC"; then
     CXXFLAGS="-fast -instances=global"
     LDFLAGS="-Xlinker -zmuldefs"
     AC_SUBST(CXXFLAGS)
     AC_SUBST(LDFLAGS)
elif test "x${CXX}" = "xpgCC"; then
     CXXFLAGS="-g -fast"
     AM_CPPFLAGS="--prelink_objects"
     AC_SUBST(CXXFLAGS)
     AC_SUBST(AM_CPPFLAGS)
fi
)

